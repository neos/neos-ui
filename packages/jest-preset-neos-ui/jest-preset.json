{
  "collectCoverageFrom": [
    "src/**/*.{js,ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    "\\.((story|spec).(js|tsx?))$"
  ],
  "transformIgnorePatterns": ["node_modules\\/(?!@neos-project)"],
  "unmockedModulePathPatterns": [
    "sinon"
  ],
  "setupFiles": [
    "../../node_modules/@neos-project/jest-preset-neos-ui/src/setupBrowserEnv.js",
    "../../node_modules/@neos-project/jest-preset-neos-ui/src/enzymeConfiguration.js"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/src/**/?(*.)spec.{js,ts,tsx}"
  ],
  "transform": {
    "^.+\\.(tsx?|js)$": ["esbuild-jest",{
        "loaders": {
          ".js": "tsx",
          ".spec.js": "tsx"
        }
      }
    ]
  },
  "moduleNameMapper": {
    "\\.(css|scss|svg)$": "identity-obj-proxy"
  },
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
