{
  "name": "@neos-project/neos-ui-ckeditor-bindings",
  "version": "1.0.0-beta8",
  "description": "Prepare CKEditor for the Neos CMS UI",
  "private": true,
  "main": "./src/manifest.js",
  "scripts": {
    "prebuild": "check-dependencies && yarn clean",
    "test": "yarn jest",
    "test:watch": "yarn jest -- --watch",
    "build": "NEOS_BUILD_ROOT=$(pwd) webpack --progress --colors",
    "build:watch": "yarn build -- --watch",
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint src",
    "jest": "PWD=$(pwd) NODE_ENV=test jest -w 1 --coverage"
  },
  "devDependencies": {
    "@neos-project/babel-preset-neos-ui": "1.0.0-beta8",
    "@neos-project/jest-preset-neos-ui": "1.0.0-beta8",
    "@neos-project/build-essentials": "1.0.0-beta8"
  },
  "dependencies": {
    "@neos-project/neos-ui-backend-connector": "1.0.0-beta8",
    "@neos-project/neos-ui-decorators": "1.0.0-beta8",
    "@neos-project/neos-ui-extensibility": "1.0.0-beta8",
    "@neos-project/neos-ui-guest-frame": "1.0.0-beta8",
    "@neos-project/neos-ui-redux-store": "1.0.0-beta8",
    "@neos-project/react-ui-components": "1.0.0-beta8"
  },
  "license": "GNU GPLv3",
  "jest": {
    "preset": "@neos-project/jest-preset-neos-ui",
    "setupFiles": [
      "<rootDir>/node_modules/@neos-project/jest-preset-neos-ui/src/setupNeosUiHostEnv.js"
    ]
  }
}
