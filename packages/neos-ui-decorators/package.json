{
  "name": "@neos-project/neos-ui-decorators",
  "version": "4.4.8",
  "description": "Decorators for Neos CMS UI.",
  "private": true,
  "main": "./src/index.js",
  "scripts": {
    "prebuild": "check-dependencies && npm run clean",
    "test": "npm run jest",
    "test:watch": "npm run jest -- --watch",
    "build": "exit 0",
    "build:watch": "exit 0",
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint src",
    "jest": "PWD=$(pwd) NODE_ENV=test jest --coverage"
  },
  "devDependencies": {
    "@neos-project/build-essentials": "^4.4.8"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "reselect": "^2.4.0"
  },
  "license": "GNU GPLv3",
  "jest": {
    "transformIgnorePatterns": [],
    "transform": {
      "neos-ui-Validators/src/.+\\.jsx?$": "./node_modules/.bin/babel-jest",
      ".*node_modules/@neos-project.+\\.jsx?$": "./node_modules/.bin/babel-jest"
    }
  }
}
