{
  "name": "@neos-project/neos-ui-validators",
  "version": "4.4.8",
  "description": "Validators for Neos CMS UI.",
  "private": true,
  "main": "./src/manifest.js",
  "scripts": {
    "prebuild": "check-dependencies && npm run clean",
    "test": "npm run jest",
    "test:watch": "npm run jest -- --watch",
    "lint": "eslint src",
    "clean": "rimraf ./lib ./dist",
    "jest": "PWD=$(pwd) NODE_ENV=test jest -w 1 --coverage"
  },
  "dependencies": {
    "@neos-project/build-essentials": "^4.4.8",
    "@neos-project/neos-ui-extensibility": "1.0.0-beta1",
    "@neos-project/neos-ui-i18n": "^4.4.8",
    "@neos-project/utils-logger": "^4.4.8"
  },
  "license": "GNU GPLv3",
  "jest": {
    "transformIgnorePatterns": [],
    "transform": {
      "neos-ui-validators/src/.+\\.jsx?$": "./node_modules/.bin/babel-jest",
      "node_modules/@neos-project/.+\\.jsx?$": "./node_modules/.bin/babel-jest"
    }
  }
}
