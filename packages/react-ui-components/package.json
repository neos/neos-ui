{
  "name": "@neos-project/react-ui-components",
  "description": "The UI components which power the Neos backend application.",
  "main": "./lib",
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "check-dependencies && npm run clean",
    "test": "npm run lint && nyc --lines 95 --functions 95 --branches 95 npm run ava",
    "test:watch": "npm run ava -- --watch",
    "build": "cross-env NODE_ENV=production npm run babel && npm run css",
    "watch:build": "./node_modules/.bin/watch 'npm run build' src/",
    "babel": "babel ./src --out-dir ./lib",
    "css": "cpx './src/**/*.css' ./lib && cpx './src/**/*.woff' ./lib && cpx './src/**/*.woff2' ./lib",
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint src && stylelint 'src/**/*.css'",
    "ava": "ava src/**/*.spec.js",
    "precoverage:generate": "rimraf ./coverage",
    "coverage:generate": "nyc report --reporter=html --reporter=text-lcov > lcov.info",
    "start": "cross-env STORY=true start-storybook -p 9001",
    "postpublish": "greenkeeper-postpublish",
    "semantic-release": "semantic-release pre && npm publish --access public && semantic-release post"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "src/**/*.spec.js",
      "src/**/*.story.js",
      "src/**/index.js"
    ],
    "include": [
      "src/**"
    ]
  },
  "release": {
    "analyzeCommits": "@inkdpixels/commit-analyzer",
    "generateNotes": "@inkdpixels/release-notes-generator"
  },
  "devDependencies": {
    "@inkdpixels/commit-analyzer": "^1.0.0",
    "@inkdpixels/release-notes-generator": "^1.0.0",
    "@kadira/react-storybook-addon-info": "^3.2.1",
    "@kadira/storybook": "^2.11.0",
    "@kadira/storybook-addon-knobs": "^1.2.0",
    "@neos-project/brand": "^1.1.0",
    "@neos-project/eslint-config-neos": "^1.1.1",
    "ava": "^0.16.0",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.13.2",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.3.13",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "check-dependencies": "^1.0.1",
    "classnames": "^2.2.3",
    "cpx": "^1.3.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.6.0",
    "file-loader": "^0.9.0",
    "greenkeeper-postpublish": "^1.0.0",
    "lodash.isfunction": "^3.0.8",
    "lodash.omit": "^4.3.0",
    "moment": "^2.14.1",
    "nyc": "^8.1.0",
    "object-assign": "^4.1.0",
    "postcss-css-variables": "^0.6.0",
    "postcss-hexrgba": "^0.2.0",
    "postcss-loader": "^0.13.0",
    "postcss-nested": "^1.0.0",
    "react": "^15.2.1",
    "react-addons-shallow-compare": "^15.3.1",
    "react-addons-test-utils": "^15.3.0",
    "react-click-outside": "^2.1.0",
    "react-collapse": "^2.2.2",
    "react-css-themr": "^1.2.0",
    "react-datetime": "^2.5.0",
    "react-dom": "^15.2.1",
    "react-height": "^2.0.4",
    "react-motion": "^0.4.2",
    "react-portal": "^2.2.1",
    "react-textarea-autosize": "^4.0.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.5",
    "style-loader": "^0.13.1",
    "stylelint": "^7.1.0",
    "url-loader": "^0.5.7",
    "watch": "^0.19.2"
  },
  "peerDependencies": {
    "@neos-project/brand": "^1.1.0",
    "classnames": "^2.2.3",
    "lodash.isfunction": "^3.0.8",
    "lodash.omit": "^4.3.0",
    "object-assign": "^4.1.0",
    "moment": "^2.14.1",
    "react": "^15.2.1",
    "react-addons-shallow-compare": "^15.3.1",
    "react-click-outside": "^2.1.0",
    "react-collapse": "^2.2.2",
    "react-datetime": "^2.5.0",
    "react-dom": "^15.2.1",
    "react-textarea-autosize": "^4.0.0",
    "react-height": "^2.0.4",
    "react-motion": "^0.4.2",
    "react-css-themr": "^1.2.0",
    "react-portal": "^2.2.1"
  },
  "license": "GNU GPLv3",
  "repository": {
    "type": "git",
    "url": "https://github.com/neos/react-ui-components.git"
  }
}
