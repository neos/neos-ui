{
  "name": "@neos-project/utils-redux",
  "version": "4.4.8",
  "description": "Neos CMS UI written in ReactJS with Immutable data structures.",
  "private": true,
  "main": "./src/index.js",
  "scripts": {
    "prebuild": "check-dependencies && npm run clean",
    "test": "npm run jest",
    "test:watch": "npm run jest -- --watch",
    "build": "exit 0",
    "build:watch": "exit 0",
    "clean": "rimraf ./lib ./dist",
    "lint": "eslint src",
    "jest": "PWD=$(pwd) NODE_ENV=test jest --coverage",
    "coverage:publish": "codeclimate-test-reporter < lcov.info"
  },
  "devDependencies": {
    "@neos-project/build-essentials": "^4.4.8"
  },
  "license": "GNU GPLv3",
  "jest": {
    "transformIgnorePatterns": [],
    "unmockedModulePathPatterns": ["sinon"],
    "transform": {
      "utils-redux/src/.+\\.jsx?$": "./node_modules/.bin/babel-jest",
      ".*node_modules/@neos-project.+\\.jsx?$": "./node_modules/.bin/babel-jest"
    }
  }
}
